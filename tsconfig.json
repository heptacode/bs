{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": [".yarn", "node_modules", "dist"]
}
